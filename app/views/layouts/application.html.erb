<!DOCTYPE html>
<html>
<head>
  <title>ScienceOverflow</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h1><%= link_to "SCIENCE! | Overflow!", questions_path %></h1>

          <%= link_to "New user", new_user_path %>
          <%= link_to "Log in", log_in_path %>
        <h3></h3>
        <%= image_tag("hunky_newton.jpg", :alt => "newton") %>
        <%= flash[:notice] %>
        <%= flash[:alert] %>
      </div>
    </div>
    <div class="row">
      <%= yield %>
    </div>
  </div>

</body>
</html>
